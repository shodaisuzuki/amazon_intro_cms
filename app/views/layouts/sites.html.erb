<!DOCTYPE html>
<html>
  <head>
    <title>AmazonIntroCms</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="nav">
      <%= link_to "マイページへ戻る", user_path(@user) %>
    </div>

    <div>
      <p id="notice">
        <%= flash[:notice] %>
      </p>
      <p id="alert">
        <%= flash[:alert] %>
      </p>
    </div>

    <%= yield %>
  </body>
</html>
