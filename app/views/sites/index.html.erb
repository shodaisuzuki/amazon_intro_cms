<p id="notice"><%= notice %></p>

<h1>サイト一覧</h1>

<table>
  <thead>
    <tr>
      <th>サイト名</th>
      <th>紹介</th>
      <th>Release status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sites.each do |site| %>
      <tr>
        <td><%= site.name %></td>
        <td><%= site.caption %></td>
        <td><%= site.release_status %></td>
        <td><%= link_to 'サイトを見る', site_path(site) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
