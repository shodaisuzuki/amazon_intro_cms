<h1>タグ管理</h1>

<table>
  <thead>
    <tr>
      <th>タグ</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product.product_tags.each do |product_tag| %>
      <tr>
        <td><%= product_tag.tag.name %></td>
        <td><%= link_to '削除', product_tag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= form_with(scope: :product_tag, url: site_product_tags_path(@site, @product) ) do |form| %>
  <div class="field">
    <%= form.hidden_field :product_id, :value => @product.id %>
  </div>
  
  <div class="field">
    <%= form.collection_select :tag_id, @site.tags.all, :id, :name %>
  </div>
  
  <div class="actions">
    <%= form.submit %>
  </div>

<% end %>

<%= link_to 'タグ登録', site_tags_path(@site) %>
