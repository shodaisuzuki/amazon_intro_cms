<p>
  <strong>ID:</strong>
  <%= @user.id %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<h2>
　<%= link_to "基本情報を編集する", edit_user_path(current_user.id) %>
  <%= link_to '新規サイト作成', new_site_path %>  
</h2>

<h1>サイト一覧</h1>

<table>
  <thead>
    <tr>
      <th>サイト名</th>
      <th>紹介文</th>
      <th>公開</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.sites.each do |site| %>
      <tr>
        <td><%= site.name %></td>
        <td><%= site.caption %></td>
        <td><%= site.release_status %></td>
        <td><%= link_to 'サイトへ移動', site_path(site)%></td>
        <td><%= link_to 'サイト情報を編集', edit_site_path(site) %></td>
        <%= link_to '商品の設定', products_path(site) %>
        <%= link_to 'タグの管理', tags_path(site) %>
      </tr>
    <% end %>
  </tbody>
</table>