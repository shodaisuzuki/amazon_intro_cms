<p id="notice"><%= notice %></p>

<h1>
  <%= @site.name %>の商品
</h1>


<h2>
  <%= link_to '商品の追加', new_product_path %>  
</h2>  

<table>
  <thead>
    <tr>
      <th>Site</th>
      <th>Title</th>
      <th>Introduction</th>
      <th>Price</th>
      <th>Image</th>
      <th>Release status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.site %></td>
        <td><%= product.title %></td>
        <td><%= product.introduction %></td>
        <td><%= product.price %></td>
        <td><%= product.image %></td>
        <td><%= product.release_status %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
